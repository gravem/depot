<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center pb-8">
    <h1 class="mx-auto font-bold text-4xl">Products</h1>
  </div>

  <table id="products" class="mx-auto rounded-lg">
    <tfoot>
      <tr>
        <td colspan="5">
          <%= link_to "New product",
          new_product_path,
          class: "inline-block rounded-lg py-3 px-5 bg-teal-600 text-white font-medium my-4 ml-2" %>
        </td>
      </tr>
    </tfoot>
    <tbody>

      <% @products.each do |product| %>
        <tr class="<%= cycle('bg-teal-50', 'bg-white') %>"> <%# cycle between background colors by settin the class of each row by cycling trough the alternatives%>
          <td class="px-2 py-3">
            <%= image_tag(product.image_url, class: 'w-40') %>
          </td>
          <td>
            <h1 class="text-xl font-bold mb-3"><%= product.title %></h1>
            <p>
              <%= truncate(strip_tags(product.description),
                          length: 80) %>
            </p>
          </td>
          <td class="px-3 "> <%# Menue buttons %>
            <ul class="space-y-2">
              <li>
                <%= link_to 'Show',
                            product,
                            class: 'w-full hover:underline hover:bg-cyan-600 hover:text-white rounded-lg py-1 px-5 outline outline-1 outline-cyan-600 inline-block' %>
              </li>
              <li>
                <%= link_to 'Edit',
                            edit_product_path(product),
                            class: 'w-full hover:underline hover:bg-cyan-600 hover:text-white rounded-lg py-1 px-5 outline outline-1 outline-cyan-600 inline-block' %>
              </li>
              <li>
                <%= link_to 'Destroy',
                            product,
                            class: 'w-full hover:underline hover:bg-pink-600 hover:text-white rounded-lg py-1 px-5 outline outline-1 outline-pink-600 inline-block',
                            data: { turbo_method: :delete,
                            turbo_confirm: "Are you sure?" } %>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>
